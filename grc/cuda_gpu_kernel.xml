<?xml version="1.0"?>
<block>
  <name>CUDA Kernel</name>
  <key>cuda_gpu_kernel</key>
  <category>GPU Acceleration</category>
  <import>import cuda</import>
  <import>import numpy</import>
  <make>cuda.gpu_kernel($device_num, $io_type.dtype, $vlen, $threads_per_block)</make>

  <param>
    <name>GPU Device #</name>
    <key>device_num</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>IO Type</name>
    <key>io_type</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>complex</key>
      <opt>dtype:numpy.complex64</opt>
    </option>
    <option>
      <name>Float</name>
      <key>float</key>
      <opt>dtype:numpy.float32</opt>
    </option>
  </param>
  <param>
    <name>Vector Length</name>
    <key>vlen</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Threads per Block</name>
    <key>threads_per_block</key>
    <value>128</value>
    <type>int</type>
  </param>

  <check>$vlen &gt; 0</check>
  <check>$threads_per_block &gt; 0</check>

  <sink>
    <name>in</name>
    <type>$io_type</type>
    <vlen>$vlen</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>$io_type</type>
    <vlen>$vlen</vlen>
  </source>
</block>
